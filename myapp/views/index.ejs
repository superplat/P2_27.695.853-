<!-- Script para manejar reCAPTCHA -->
<script>
  document.getElementById('contactForm').addEventListener('submit', function (event) {
    event.preventDefault(); // Prevenir el envío inmediato del formulario

    grecaptcha.ready(function () {
      grecaptcha.execute('6LcnyLQqAAAAAMdRFos5Rjwo2Ncdv6Vf5A4MnMyv', { action: 'submit' }).then(function (token) {
        document.getElementById('recaptchaResponse').value = token; // Asignar el token al campo oculto
        event.target.submit(); // Enviar el formulario después de asignar el token
      }).catch(function (error) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'No se pudo verificar el reCAPTCHA. Inténtalo de nuevo.',
        });
      });
    });
  });
</script>

